{
    "codeLens.enable": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.enable": true,
    "diagnostic.errorSign": "E",
    "diagnostic.hintSign": "H",
    "diagnostic.infoSign": "I",
    "diagnostic.warningSign": "W",
    "diagnostic.level": "hint",
    "hover.floatConfig": {},
    "diagnostic.messageTarget": "float",
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": " â–¸ ",
    "diagnostic.virtualTextCurrentLineOnly": false,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.pylintEnabled": false,
    "rust-analyzer.cargo.features": "all",
    "rust-analyzer.checkOnSave.enable": true,
    "rust-analyzer.diagnostics.enable": true,
    "rust-analyzer.inlayHints.enable": true,
    "rust-analyzer.inlayHints.chainingHints.enable": true,
    "rust-analyzer.inlayHints.parameterHints.enable": true,
    "rust-analyzer.inlayHints.typeHints.enable": true,
    "rust-analyzer.lens.enable": false,
    "rust-analyzer.lens.references.adt.enable": false,
    "rust-analyzer.lens.references.method.enable": false,
    "rust-analyzer.server.path": "rust-analyzer",
    "rust-analyzer.updates.checkOnStartup": false,
    "typescript.referencesCodeLens.enable": false,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "trace.server": "verbose",
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true,
                "gofumpt": true
            }
        },
        "perl": {
            "enable": true,
            "command": "pls",
            "filetypes": ["perl"],
            "settings": {
                "perl": {
                    "perlcritic": {
                        "enabled" : true 
                    },
                    "syntax": { 
                        "enabled" : true 
                    }
                }
            }
        },
        "clangd": {
            "command": "clangd",
            "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git/"],
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
        }
    }
}
